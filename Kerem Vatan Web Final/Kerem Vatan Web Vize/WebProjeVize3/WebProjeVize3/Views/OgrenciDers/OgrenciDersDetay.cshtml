@model WebProjeVize3.Models.OgrenciDers

@{
    <h1>Öğrenci Ders Detayları</h1>


    <div>
        <form asp-action="OgrenciDersDetay">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" value="@Model.Id" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ders_Id" class="control-label"></label>
                <input asp-for="Ders_Id" class="form-control" value="@Model.Ders_Id" />
                <span asp-validation-for="Ders_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ogrenci_Id" class="control-label"></label>
                <input asp-for="Ogrenci_Id" class="form-control" value="@Model.Ogrenci_Id" />
                <span asp-validation-for="Ogrenci_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
}
