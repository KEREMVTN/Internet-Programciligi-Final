@model WebProjeVize3.Models.Ders
*{
    font-family: 'Indie Flower', sans-serif;
    font-style: normal;
    font-weight: 400;
}
@{
    <h1>Ders Bilgileri Detayları</h1>


    <div>
        <form asp-action="DersDetay">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" value="@Model.Id" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ders_Adı" class="control-label"></label>
                <input asp-for="Ders_Adı" class="form-control" value="@Model.Ders_Adı" />
                <span asp-validation-for="Ders_Adı" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ders_Kredisi" class="control-label"></label>
                <input asp-for="Ders_Kredisi" class="form-control" value="@Model.Ders_Kredisi" />
                <span asp-validation-for="Ders_Kredisi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Okul_Yönetim_Id" class="control-label"></label>
                <input asp-for="Okul_Yönetim_Id" class="form-control" value="@Model.Okul_Yönetim_Id" />
                <span asp-validation-for="Okul_Yönetim_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>


}
